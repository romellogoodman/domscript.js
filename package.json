{
  "name": "domscript",
  "version": "0.0.1",
  "description": "A library for scripting html.",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "lint": "eslint .",
    "test": "echo \"tests\"",
    "prepublish": "npm run lint && npm test && npm run build"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.13.12",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1"
  },
  "source": "index.js",
  "main": "dist/domscript.js",
  "module": "dist/domscript.module.js",
  "unpkg": "dist/domscript.umd.js",
  "author": "Romello Goodman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/romellogoodman/domscript.js"
  },
  "keywords": [
    "creative coding",
    "dom",
    "html"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "comma-dangle": 0,
      "indent": 0,
      "max-len": 0,
      "no-console": 1,
      "no-unused-vars": 1,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "operator-linebreak": 0,
      "prettier/prettier": "error",
      "space-before-function-paren": 0
    }
  },
  "eslintIgnore": [
    "dist",
    "__tests__"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true
  }
}
